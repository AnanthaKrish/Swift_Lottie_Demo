# Uncomment the next line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'

use_frameworks!  

target 'SZ_Lottie_DEMO_Swift' do

# lottie 动画
pod 'lottie-ios'

# svga 动画
pod 'SVGAPlayer'

pod 'MJRefresh'

pod 'Alamofire', '~> 4.5'

pod 'SnapKit', '~> 4.0.0'

pod 'MBProgressHUD'

# RxSwift的必备库
pod 'RxSwift'

# 对 UIKit Foundation 进行 Rx 化
pod 'RxCocoa'

# 为我们提供 rx_disposeBag
pod 'NSObject+Rx'

# 为RxSwift专用提供，对Alamofire进行封装的一个网络请求库
pod 'Moya/RxSwift'

# Json转模型之必备良品
pod 'ObjectMapper'

# 帮助我们优雅的使用tableView的数据源方法
pod 'RxDataSources'

# 提供快速初始化的语法糖
pod 'Then'

# 图片加载库
pod 'Kingfisher'

# 帮助我们优雅的使用自定义cell和view,不再出现Optional
pod 'Reusable'

end  
